@model List<PortfolioProject.Models.Portfolio>
@{
    ViewBag.Title = "PortfolioList";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Portfolyo Listesi ve İşlemleri</h2>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Image</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td>@item.Title</td>
            <td>@item.SubTitle</td>
            <td>@item.Image</td>
            <td><a href="/Portfolio/DeletePortfolio/@item.FeatureId" class="btn btn-danger">Sil</a></td>
            <td><a href="/Portfolio/UpdatePortfolio/@item.FeatureId" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/Portfolio/CreatePortfolio/" class="btn btn-info">Yeni Proje Girişi</a>

