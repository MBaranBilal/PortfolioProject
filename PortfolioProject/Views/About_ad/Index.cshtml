@model PortfolioProject.Models.About
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2>"Hakkımda" Alanı Güncelleme</h2>
<form method="post">
    @Html.HiddenFor(x=>x.AboutId)
    <label style="color:orange"><b>Başlık</b></label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Image URL</b></label>
    @Html.TextAreaFor(x => x.ImageUrl, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Açıklama</b></label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">
        <span class="btn-label">
            <i class="fa fa-check"></i>
        </span>
        Kaydet
    </button>
</form>


