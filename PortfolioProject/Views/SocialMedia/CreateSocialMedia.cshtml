@model PortfolioProject.Models.SocialMedia
@{
    ViewBag.Title = "CreateSocialMedia";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4"> Yeni Yetenek Ekleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x=>x.SocialMediaId)
    <label style="color:orange"><b>Başlık</b></label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })  
    <br />
    <label style="color:orange"><b>URL</b></label>
    @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>İkon</b></label>
    @Html.TextAreaFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Durum</b></label>
    @Html.TextBoxFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">
        <span class="btn-label">
            <i class="fa fa-check"></i>
        </span>
        Sosyal Medya Bilgisi Ekle
    </button>
</form>

