@model PortfolioProject.Models.Skill

@{
    ViewBag.Title = "UpdateSkill";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Yetenek Güncelleme Sayfası</h2>
<form method="post">
    @Html.HiddenFor(x=>x.SkillId)
    <label style="color:orange"><b>Yetenek</b></label>
    @Html.TextBoxFor(x => x.SkillName, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Oran</b></label>
    @Html.TextBoxFor(x => x.Rate, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>İkon</b></label>
    @Html.TextAreaFor(x => x.Icon, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Durum</b></label>
    @Html.TextAreaFor(x => x.Status, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">
        <span class="btn-label">
            <i class="fa fa-check-square"></i>
        </span>
        Yetenek Bilgisi Güncelle
    </button>
</form>
