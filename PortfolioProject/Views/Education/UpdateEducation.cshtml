@model PortfolioProject.Models.Education
@{
    ViewBag.Title = "UpdateEducation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<h2 class="mb-4">Eğitim Bilgisi Güncelleme</h2>
<form method="post">
    @Html.HiddenFor(x=>x.EducationId)
    <label style="color:orange"><b>Başlık</b></label>
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Alt Başlık</b></label>
    @Html.TextBoxFor(x => x.SubTitle, new { @class = "form-control" })
    <br />
    <label style="color:orange"><b>Açıklama</b></label>
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    <button class="btn btn-warning">
        <span class="btn-label">
            <i class="fa fa-check-square"></i>
        </span>
        Eğitim Bilgisi Güncelle
    </button>
</form>

